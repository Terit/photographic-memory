<div class="progress">
  <div id='css-progress-bar' class="timer-green"></div>
  <div id='css-remaining-bar' class="timer-warning"></div>
</div>
<!-- <div class="container"> -->
<div id="cards" class='container'>
  <div class="panel">
    <div class="overlay"></div>
    <div class="panel-body">
      <div class='buttons'>
        <button id="play_button" class="btn btn-info start">Play Now</button>
        <form id='scoreboard' class='hidden' action='/leaderboard' method='post'>
          <input name='name' type='text' class="form-control" maxlength="3" id='inputSuccess' placeholder='Enter initials for high score'></input>
          <input name='score' type='hidden' id='time' ></input>
          <input name='tag' type='hidden' value=<%= @tag %> ></input>
        </form>
       </div>
    </div>
  </div>

<div id='card-template' class='flip-container hidden'>
  <div class='flipper'>
    <div class='front'></div>
    <div class='back'></div>
  </div>
</div>
