<div class="navbar navbar-default">
  <div class="navbar-header left">
    <span class="navbar-brand" href="#">Photographic Memory</span>
  </div>
  <div class="nav navbar-nav center">
    <ul class="nav navbar-nav">
      <li class='li-spacer'>
        <a class='a-spacer' id="tag">#<% if @tag %><%= @tag %><% else %>popular<% end %></a>
      </li>
    </ul>
  </div>
  <div class="nav navbar-nav right">
    <form  class="navbar-form navbar-right" method="get" action="/search">
      <input id='search_bar' type="text" class="form-control col-lg-8" placeholder="#Hashtag Search" name="search">
    </form>
  </div>
</div>
<div class="progress">
  <!-- <a id="timer" class='navbar-right'>Time: 45</a> -->
  <div class="progress-bar progress-bar-success" style="width: 100%"></div>
  <div id='remaining-bar' class="progress-bar progress-bar-warning" style="width: 0%"></div>
</div>

<div id='card-template' style='display: hidden;' class='flip col-xs-3'>
  <div class='card'>
    <div class='front-wrap'>
      <div class="front"></div>
    </div>
    <div class='back-wrap'>
      <div class="back"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="panel panel-primary">
    <div class="overlay"></div>
    <div class="panel-body">
      <button id="play_button" class="btn btn-info start">Play Now</button>
    </div>

    <div id="cards"><div class='row'></div></div>
      
  </div>



</div>
